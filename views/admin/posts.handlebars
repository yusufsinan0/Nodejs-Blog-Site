<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-about md-padding">
    <h1 class="text-white text-center">POSTS</h1>
</section>

<!--==========================
    ABOUTUS Section
============================-->
<section id="aboutus" class="md-padding">
    <div class="container">
        {{> admin-nav}}

        <div class="clearfix"></div>
        <div class="mb-5"></div>
        <div class="row">

            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <th>Title</th>
                        <th>Category Name</th>
                        <th>Delete</th>
                        <th>Edit</th>

                    </thead>

                    <tbody>

                        {{#each posts}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{this.name}}</td>


                            <td>
                                <a class="btn btn-warning" href="/admin/posts/edit/{{this._id}}">DÜZENLE</a>
                            </td>
                            <td>
                                <form action="/admin/posts/{{this._id}}?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">SİL</button>
                                </form>
                            </td>






                        </tr>
                        {{/each}}

                    </tbody>


                </table>

            </div>
        </div>

    </div>
</section>