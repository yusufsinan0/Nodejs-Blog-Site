<section class="page-image page-image-about md-padding">
    <h1 class="text-white text-center">ADD POST</h1>
</section>

<section id="contact" class="md-padding">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 offset-md-4">
                <div class="section-header">
                    <h2 class="title">ADD POST</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <!-- enctype = "multipart/form-data" dosyaları post olarak göndermemizi sağlar-->
                <form action="/posts/test" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="offset-2 col-md-8">
                            <div class="form-group">
                                <input class="form-control" id="title" name="title" type="text" placeholder="Başlık"
                                    required="required">
                                <p class="help-block text-danger"></p>
                            </div>

                            <div class="form-group">
                                <textarea class="form-control" id="content" name="content" placeholder="İçerik"
                                    required="required"></textarea>
                                <p class="help-block text-danger"></p>
                            </div>

                            <div class="form-group">
                                <input class="form-control" id="post_image" name="post_image" type="file"
                                    placeholder="Başlık" required="required">
                                <p class="help-block text-danger"></p>
                            </div>

                            <div class="form-group">
                                <select class="form-control" name="category">
                                    {{#each categories}}
                                    <option value="{{_id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                            </div>



                        </div>

                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <button class="main-btn" type="submit">Blog Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>